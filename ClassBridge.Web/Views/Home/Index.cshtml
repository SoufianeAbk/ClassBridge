@{
    ViewData["Title"] = "ClassBridge - Leraren & Ouders Verbonden";
}

<div class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                <span style="color: #e50914;">ClassBridge</span>
            </h1>
            <p class="hero-subtitle">
                Het platform dat leraren en ouders verbindt voor betere begeleiding van kinderen
            </p>

            @if (User.Identity?.IsAuthenticated != true)
            {
                <div class="auth-buttons">
                    <a asp-controller="Account" asp-action="RegisterParent" class="auth-btn auth-btn-primary">
                        <i class="bi bi-people-fill"></i> Registreer als Ouder
                    </a>
                    <a asp-controller="Account" asp-action="RegisterTeacher" class="auth-btn auth-btn-secondary">
                        <i class="bi bi-mortarboard-fill"></i> Registreer als Leraar
                    </a>
                </div>

                <div class="stats-section" style="margin-top: 4rem;">
                    <div class="stat-item">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Leraren</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">1000+</div>
                        <div class="stat-label">Ouders</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">15</div>
                        <div class="stat-label">Vakken</div>
                    </div>
                </div>
            }
            else
            {
                <div class="welcome-section">
                    <h3>Welkom terug! 👋</h3>
                    <p style="margin-bottom: 0; color: #b3b3b3;">Klaar om verder te gaan?</p>
                </div>

                <div class="auth-buttons">
                    @if (User.IsInRole("Teacher"))
                    {
                        <a asp-controller="Teacher" asp-action="Profile" class="auth-btn auth-btn-primary">
                            <i class="bi bi-person"></i> Mijn Profiel
                        </a>
                    }
                    else if (User.IsInRole("Parent"))
                    {
                        <a asp-controller="Parent" asp-action="Profile" class="auth-btn auth-btn-primary">
                            <i class="bi bi-person"></i> Mijn Profiel
                        </a>
                        <a asp-controller="Parent" asp-action="SearchTeachers" class="auth-btn auth-btn-secondary">
                            <i class="bi bi-search"></i> Leraren Zoeken
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@if (User.Identity?.IsAuthenticated != true)
{
    <div class="features-section">
        <div class="container">
            <h2 style="text-align: center; margin-bottom: 3rem;">Waarom ClassBridge?</h2>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Betrouwbaar & Veilig</h4>
                    <p>Alle leraren zijn geverifieerd en gekwalificeerd. Uw gegevens zijn volledig beveiligd en privé.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h4>Flexibel Plannen</h4>
                    <p>Plan afspraken op tijden die voor u werken. Volledig flexibel zonder verplichtingen.</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h4>Direct Contact</h4>
                    <p>Directe communicatie tussen leraren en ouders voor het beste resultaat en voortgang.</p>
                </div>
            </div>

            <div class="cta-section">
                <h2>Klaar om te beginnen?</h2>
                <p>Sluit u aan bij duizenden leraren en ouders die ClassBridge gebruiken voor betere begeleiding van kinderen.</p>
                <div class="auth-buttons" style="max-width: 500px; margin: 0 auto;">
                    <a asp-controller="Account" asp-action="RegisterParent" class="auth-btn auth-btn-primary">
                        <i class="bi bi-people-fill"></i> Voor Ouders
                    </a>
                    <a asp-controller="Account" asp-action="RegisterTeacher" class="auth-btn auth-btn-secondary">
                        <i class="bi bi-mortarboard-fill"></i> Voor Leraren
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* Overrides for specific styling */
    .features-section {
        border-top: 1px solid #242424;
    }

    .feature-card:nth-child(1) .feature-icon {
        color: #25b93e;
    }

    .feature-card:nth-child(2) .feature-icon {
        color: #e50914;
    }

    .feature-card:nth-child(3) .feature-icon {
        color: #f4a800;
    }

    @@media (max-width: 768px) {
        .hero-section

    {
        min-height: auto;
        padding: 3rem 0;
    }

    .hero-content {
        max-width: 100%;
    }

    .stats-section {
        grid-template-columns: 1fr;
    }

    .auth-buttons {
        grid-template-columns: 1fr;
    }

    }
</style>
