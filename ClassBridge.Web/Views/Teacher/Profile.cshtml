@model ClassBridge.Web.ViewModels.TeacherProfileViewModel
@{
    ViewData["Title"] = "Mijn Profiel";
}

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                {
                    <img src="@Model.ProfileImageUrl" class="card-img-top" alt="@Model.FullName">
                }
                else
                {
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 300px;">
                        <i class="bi bi-person-circle text-white" style="font-size: 6rem;"></i>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="text-muted mb-2">@Model.Qualification</p>

                    <form asp-action="ToggleAvailability" method="post">
                        @if (Model.IsAvailableForMeetings)
                        {
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Beschikbaar
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Niet Beschikbaar
                            </button>
                        }
                    </form>

                    <hr>

                    <p class="mb-1"><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p class="mb-1"><i class="bi bi-telephone"></i> @Model.PhoneNumber</p>
                    <p class="mb-1"><i class="bi bi-briefcase"></i> @Model.YearsOfExperience jaar ervaring</p>
                    <p class="mb-1"><i class="bi bi-currency-euro"></i> €@Model.HourlyRate per uur</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Bio</h5>
                    <p class="card-text">@Model.Bio</p>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Mijn Vakken</h5>
                </div>
                <div class="card-body">
                    @if (Model.Strengths.Any())
                    {
                        <div class="row">
                            @foreach (var strength in Model.Strengths)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <strong class="me-2">@strength.Subject</strong>
                                        <div class="flex-grow-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= strength.ProficiencyLevel)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(strength.Description))
                                    {
                                        <p class="text-muted small mb-0">@strength.Description</p>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">U heeft nog geen vakken toegevoegd.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Beschikbaarheid</h5>
                    <a asp-action="AddAvailability" class="btn btn-light btn-sm">
                        <i class="bi bi-plus-circle"></i> Toevoegen
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Availabilities.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Dag</th>
                                        <th>Tijdslot</th>
                                        <th>Status</th>
                                        <th>Actie</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var availability in Model.Availabilities.OrderBy(a => a.DayOfWeek))
                                    {
                                        <tr>
                                            <td>@availability.DayName</td>
                                            <td>@availability.TimeRange</td>
                                            <td>
                                                @if (availability.IsBooked)
                                                {
                                                    <span class="badge bg-danger">Geboekt</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Beschikbaar</span>
                                                }
                                            </td>
                                            <td>
                                                <form asp-action="RemoveAvailability" asp-route-id="@availability.Id" method="post"
                                                      onsubmit="return confirm('Weet u zeker dat u deze beschikbaarheid wilt verwijderen?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted mb-3">U heeft nog geen beschikbaarheid ingesteld.</p>
                            <a asp-action="AddAvailability" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Beschikbaarheid Toevoegen
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
