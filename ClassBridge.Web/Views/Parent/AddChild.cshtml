@model ClassBridge.Web.ViewModels.ChildViewModel
@{
    ViewData["Title"] = "Kind Toevoegen";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Kind Toevoegen</h2>

                    <form asp-action="AddChild" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">Voornaam</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">Achternaam</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Geboortedatum</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Grade" class="form-label">Klas</label>
                            <input asp-for="Grade" class="form-control" placeholder="Bijv. 1e jaar, 2e jaar" />
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SchoolName" class="form-label">Schoolnaam (optioneel)</label>
                            <input asp-for="SchoolName" class="form-control" />
                            <span asp-validation-for="SchoolName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SpecialNeeds" class="form-label">Speciale behoeften (optioneel)</label>
                            <textarea asp-for="SpecialNeeds" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SpecialNeeds" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Kind Toevoegen</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Annuleren</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
