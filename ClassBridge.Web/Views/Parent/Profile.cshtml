@model ClassBridge.Web.ViewModels.ParentProfileViewModel
@{
    ViewData["Title"] = "Mijn Profiel";
}

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="text-muted mb-2">Ouder</p>
                    <hr>
                    <p class="mb-1"><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p class="mb-1"><i class="bi bi-telephone"></i> @Model.PhoneNumber</p>
                    <p class="mb-1"><i class="bi bi-geo-alt"></i> @Model.Address</p>
                    <p class="mb-1">@Model.PostalCode @Model.City</p>

                    @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                    {
                        <hr>
                        <h6 class="mb-2">Noodcontact</h6>
                        <p class="mb-1">@Model.EmergencyContactName</p>
                        <p class="mb-0">@Model.EmergencyContactPhone</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="card-title">Acties</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="AddChild" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Kind Toevoegen
                        </a>
                        <a asp-action="SearchTeachers" class="btn btn-outline-success">
                            <i class="bi bi-search"></i> Leraren Zoeken
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Mijn Kinderen</h5>
                </div>
                <div class="card-body">
                    @if (Model.Children.Any())
                    {
                        <div class="row">
                            @foreach (var child in Model.Children)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@child.FullName</h6>
                                            <p class="mb-1 text-muted">@child.Age jaar oud</p>
                                            <p class="mb-1">Klas: @child.Grade</p>
                                            @if (!string.IsNullOrEmpty(child.SchoolName))
                                            {
                                                <p class="mb-1">School: @child.SchoolName</p>
                                            }
                                            @if (!string.IsNullOrEmpty(child.SpecialNeeds))
                                            {
                                                <p class="mb-1 text-info">Speciale behoeften: @child.SpecialNeeds</p>
                                            }
                                            <form asp-action="RemoveChild" asp-route-id="@child.Id" method="post" class="mt-2"
                                                  onsubmit="return confirm('Weet u zeker dat u dit kind wilt verwijderen?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Verwijderen
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <p class="text-muted">U heeft nog geen kinderen toegevoegd.</p>
                            <a asp-action="AddChild" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Kind Toevoegen
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
