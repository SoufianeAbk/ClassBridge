@model ClassBridge.Web.ViewModels.RegisterTeacherViewModel
@{
    ViewData["Title"] = "Registreren als Leraar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Registreren als Leraar</h2>

                    <form asp-action="RegisterTeacher" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h4 class="mb-3">Persoonlijke Gegevens</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">Voornaam</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">Achternaam</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">E-mailadres</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Telefoonnummer</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <h4 class="mb-3 mt-4">Professionele Informatie</h4>
                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label">Bio</label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Vertel iets over jezelf en je ervaring..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Qualification" class="form-label">Kwalificatie</label>
                            <input asp-for="Qualification" class="form-control" placeholder="Bijv. Master in Onderwijs" />
                            <span asp-validation-for="Qualification" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="YearsOfExperience" class="form-label">Jaren Ervaring</label>
                                <input asp-for="YearsOfExperience" class="form-control" type="number" min="0" max="50" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="HourlyRate" class="form-label">Uurtarief (€)</label>
                                <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfileImageUrl" class="form-label">Profielfoto URL (optioneel)</label>
                            <input asp-for="ProfileImageUrl" class="form-control" />
                            <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
                        </div>

                        <h4 class="mb-3 mt-4">Wachtwoord</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label">Wachtwoord</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Bevestig Wachtwoord</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Registreren</button>
                            <a asp-action="Login" class="btn btn-outline-secondary">Terug naar inloggen</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
